---
export interface Props {
  apiName: string;
  apiVersion: string;
  apiBaseUrl: string;
}

const { apiName, apiVersion, apiBaseUrl } = Astro.props;
---

<div class="welcome-section">
  <!-- Header Section -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">{apiName} Documentation</h1>
    <div
      class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium"
    >
      Version {apiVersion}
    </div>
    <p class="mt-4 text-gray-600 max-w-2xl mx-auto">
      Welcome to the official documentation for the {apiName} REST API. This documentation
      will help you integrate with our services and build amazing applications.
    </p>
  </div>

  <!-- Quick Start Section -->
  <div class="mb-12">
    <h2 class="text-2xl font-bold mb-4">Quick Start</h2>
    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
      <h3 class="text-lg font-semibold mb-3">Base URL</h3>
      <code class="block bg-gray-800 text-white p-3 rounded font-mono"
        >{apiBaseUrl}</code
      >

      <h3 class="text-lg font-semibold mt-6 mb-3">Authentication</h3>
      <p class="mb-4">
        All API requests require authentication using a Bearer token:
      </p>
      <code
        class="block bg-gray-800 text-white p-3 rounded font-mono overflow-x-auto"
      >
        Authorization: Bearer YOUR_API_TOKEN
      </code>

      <div class="mt-6">
        <a href="/auth/login" class="text-blue-600 hover:underline font-medium">
          Learn more about authentication →
        </a>
      </div>
    </div>
  </div>

  <!-- Resources Overview -->
  <div class="mb-12">
    <h2 class="text-2xl font-bold mb-4">API Resources</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Authentication -->
      <div
        class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow"
      >
        <div class="flex items-center mb-4">
          <div class="bg-blue-100 p-2 rounded-md">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-blue-700"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold ml-3">Authentication</h3>
        </div>
        <p class="text-gray-600 mb-4">
          Manage user authentication and session tokens.
        </p>
        <a href="/auth/login" class="text-blue-600 hover:underline text-sm">
          View Authentication APIs →
        </a>
      </div>

      <!-- Users -->
      <div
        class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow"
      >
        <div class="flex items-center mb-4">
          <div class="bg-green-100 p-2 rounded-md">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-green-700"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold ml-3">Users</h3>
        </div>
        <p class="text-gray-600 mb-4">
          Create, read, update and delete user resources.
        </p>
        <a href="/users/list" class="text-blue-600 hover:underline text-sm">
          View User APIs →
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .welcome-section {
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
