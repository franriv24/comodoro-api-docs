---
import SideNavigation from "../components/SideNavigation.astro";
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - API Documentation</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside
        class="w-64 bg-white border-r border-gray-200 flex-shrink-0 fixed h-full overflow-y-auto"
      >
        <div class="px-6 py-4 border-b border-gray-200">
          <h1 class="text-xl font-bold">API Documentation</h1>
        </div>
        <SideNavigation />
      </aside>

      <!-- Main Content -->
      <main class="flex-grow ml-64 p-8">
        <div class="max-w-5xl mx-auto bg-white rounded-md shadow-sm p-8">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Add any client-side scripts here
      document.addEventListener("DOMContentLoaded", () => {
        const sections = document.querySelectorAll(".api-endpoint");
        // You can add functionality like collapsible sections, code highlighting, etc.
      });
    </script>
  </body>
</html>
